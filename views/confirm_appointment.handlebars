{{!-- Appointment confirmation page --}}

<div class="container">
  <div class="row">
    <br><br><br><br>
    <div class="col-lg-12">
      <br><br><br>
      <div class="card">
        <div class="card-header">
          Please review and confirm!
        </div>
        <div class="card-body">
          <h5 class="card-title">My appointment information.</h5>
          <p class="card-text">We've got you covered. Medik will book your appointment as follows:</p>
          <div class="alert alert-success" role="alert">
            <i class="fas fa-calendar-check"></i> Your visit is scheduled for <a href="#" class="alert-link">{{timeslot}}</a> <span id="muted-txt">Please arrive 10 minutes
              earlier.</span>
          </div>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item active" aria-current="page">Patient</li>
              <li class="breadcrumb-item"><a href="javascript:history.back()"><i class="far fa-edit"></i> </a></li>
            </ol>
          </nav>
          <ul class="list-group">
            <li class="list-group-item"><i class="far fa-id-card" id="muted-txt"></i></i><span id="muted-txt"> Patient
                name: </span>{{patientName}} {{patientLastName}}</li>
            {{#if patientDOB}}
            <li class="list-group-item"><i class="fas fa-birthday-cake" id="muted-txt"></i><span id="muted-txt"> Date of
                birth: </span> {{patientDOB}}</li>
            {{else}}
            {{/if}}
            {{#if patientGenre}}
            <li class="list-group-item"><i class="fas fa-venus-mars" id="muted-txt"></i> <span id="muted-txt"> Genre:
              </span> {{patientGenre}}</li>
            {{else}}
            {{/if}}
            {{#if patientReason}}
            <li class="list-group-item"><i class="fas fa-notes-medical" id="muted-txt"></i> <span id="muted-txt">Note for
                the doctor: </span> {{patientReason}}</li>
            {{else}}
            {{/if}}
            <li class="list-group-item"><i class="fas fa-envelope" id="muted-txt"></i> <span id="muted-txt"> Email:
              </span> {{patientEmail}}</li>
            <li class="list-group-item"><i class="fas fa-phone" id="muted-txt"></i> <span id="muted-txt"> Patient
                contact phone: </span>
              {{patientPhone}}</li>
          </ul>
          <br>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item active" aria-current="page">Doctor</li>
              <li class="breadcrumb-item"><a href="javascript:history.back()"><i class="far fa-edit"></i> </a></li>
            </ol>
          </nav>
          <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="http://www.uman.edu.mx/umanweb/maestriasaludpublica/images/p-egreso.jpg" class="card-img"
                  alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><i class="fas fa-user-md" id="muted-txt"></i> {{selectedDoctorName}}</h5>
                  <p class="card-text"><small class="text-muted">{{selectedDoctorSpecialty}}</small></p>
                  <p class="card-text"><i class="far fa-hospital" id="muted-txt"></i> {{address}}</p>
                </div>
              </div>
            </div>
          </div>
          <br>
          <a href="javascript:history.back()" class="btn btn-success btn-lg btn-block" data-toggle="modal"
            data-target="#staticBackdrop">Confirm my appointment</a>
          <small id="passwordHelpBlock" class="form-text text-muted text-center">
            Once confirmed, we will send you an email with the details.
          </small>
        </div>
      </div>
    </div>
  </div>

  <!-- Confirmation Modal -->
  <div class="row">
    <div class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog"
      aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Appointment confirmed!</h5>
            {{!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span> --}}
            </button>
          </div>
          <div class="modal-body">
            <p>{{patientName}}:</p>
            <p>Your appointment with {{selectedDoctorName}} has been successfully scheduled.</p>
            <p>You will receive an email confirmation to {{patientEmail}}</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-link" data-dismiss="modal">Schedule more appointments</button>
            <button type="button" class="btn btn-primary">Go to My Account</button>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>